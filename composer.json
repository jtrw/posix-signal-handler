{
    "name": "jtrw/posix-signal-handler",
    "type": "library",
    "description": "Handler for Posix signals",
    "keywords": [
        "POSIX"
    ],
    "homepage": "https://github.com/jtrw/posix-signal-handler",
    "license": "MIT",
    "authors": [
        {
            "name": "Nil",
            "email": "brdnlsrg@gmail.com",
            "homepage": "https://github.com/jtrw",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=7.4",
        "ext-pcntl": "*",
        "ext-posix": "*"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Jtrw\\PosixSignal\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jtrw\\PosixSignal\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs --standard=ruleset.xml src",
        "fix-style": "phpcbf src"
    },
    "config": {
        "sort-packages": true
    }
}